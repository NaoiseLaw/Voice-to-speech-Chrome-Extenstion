{
  "name": "voice-input-extension",
  "version": "1.0.0",
  "description": "A powerful Chrome extension that enables voice-to-text input across all web pages",
  "main": "manifest.json",
  "scripts": {
    "build": "npm run clean && npm run copy && npm run minify",
    "clean": "rimraf dist",
    "copy": "cp -r src dist/ && cp manifest.json dist/",
    "minify": "npm run minify:js && npm run minify:css",
    "minify:js": "find dist -name '*.js' -exec terser {} -o {} --compress --mangle \\;",
    "minify:css": "find dist -name '*.css' -exec cleancss {} -o {} \\;",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.{js,html,css}",
    "dev": "npm run build && npm run watch",
    "watch": "nodemon --watch src --ext js,html,css --exec 'npm run build'",
    "package": "npm run build && cd dist && zip -r ../voice-input-extension.zip .",
    "validate": "npm run lint && npm run test",
    "prepublishOnly": "npm run validate && npm run build"
  },
  "keywords": [
    "chrome-extension",
    "voice-input",
    "speech-recognition",
    "voice-to-text",
    "accessibility",
    "productivity"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/voice-input-extension.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/voice-input-extension/issues"
  },
  "homepage": "https://github.com/yourusername/voice-input-extension#readme",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.0.0",
    "clean-css-cli": "^5.6.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "terser": "^5.17.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "Chrome >= 88",
    "Edge >= 88"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "webextensions": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
} 